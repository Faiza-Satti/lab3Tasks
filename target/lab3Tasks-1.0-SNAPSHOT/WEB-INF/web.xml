<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ServletExample</servlet-name> <!-- Should be the name of your Servlet-->
        <servlet-class>com.example.lab3tasks.servlet.ServletExample</servlet-class>
        <!-- Should be the path of your Servlet-->
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletExample
        </servlet-name>
        <url-pattern>/exampleServlet/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDisplay</servlet-name>
        <servlet-class>com.example.lab3tasks.servlet.ServletDisplay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDisplay</servlet-name>
        <url-pattern>/servletdisplay</url-pattern>
    </servlet-mapping>

</web-app>